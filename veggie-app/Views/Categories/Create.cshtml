@model veggie_app.Models.Category

@{
    ViewData["Title"] = "Crear categoría | Veggie";
}

<h1>Crear categoría</h1>
<div class="row">
    <div class="col-md-4 mt-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-labe mt-2"> Nombre categoría</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Crear categoría" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
